block content
#webvfx-editor
    #modal
    #editor
        #video-container
            #player-container
                video#player(src="live.webm", autoplay=true, loop=true , style="display:none")
            #container.container-background
        #status-bar
        #right-panels
            #webvfx-collection-container.round-panel.v-panel
                #add.tab
                    .content
                        fieldset.well.well-small
                            h3.editor= i18n.gettext("Add object")
                            input(type="file", id="files", value="files", multiple=true, style="display:none")
                            select(type="text", id="objects", style="width:130px;float:left")
                                option(value='')= i18n.gettext("[select]")
                                option(value='image')= i18n.gettext("Image")
                                option(value='text')= i18n.gettext("Text")
                                option(value='box')= i18n.gettext("Box")
                                option(value='time')= i18n.gettext("Time")
                                option(value='weather')= i18n.gettext("Weather")
                            button#clear-all(style="width:100%")= i18n.gettext("clear all")
                h2= i18n.gettext("object collection")
                #webvfx-collection.v-container
            #main-controls.round-panel.v-panel
                h2= i18n.gettext("control panel")
                #controls.v-container
                    button#update-video(style="width:100%;margin-bottom:10px")= i18n.gettext("update video")
                    button#clear-video(style="width:100%;margin-bottom:10px")= i18n.gettext("clear video")
                    fieldset.well.well-small.storage
                        h3.editor= i18n.gettext("Storage")
                        select#sketchs
                            option(value='[select]')= i18n.gettext("[select]")
                        button#new-sketch= i18n.gettext("new")
                        button#load-sketch= i18n.gettext("load")
                        button#save-sketch= i18n.gettext("save")
                        button#del-sketch= i18n.gettext("del")
                        button#schedule-sketch= i18n.gettext("schedule")
                    #options.tab
                        h2.colapse= i18n.gettext("Options")
                        .content
                            fieldset.well.well-small.options
                                input#real-time-edition(type="checkbox")
                                label(for="real-time-edition")= i18n.gettext("real time edition")
                                input#safe-area(type="checkbox")
                                label(for="safe-area")= i18n.gettext("show safe area")
                                input#video-preview(type="checkbox")
                                label(for="video-preview")= i18n.gettext("video preview")
                    fieldset.well.well-small.resolution
                        label(for="resolution")= i18n.gettext("Resolution: ")
                        select#resolutions
                            for o in resolutions
                                each val, key in o
                                    - var r = key + ' (' + val + ')'
                                    option(selected=val == resolution, value=val) #{r}
                    fieldset.well.well-small.schedules
                        h3.editor= i18n.gettext("Schedules")
                        select#schedules
                            option(value='[select]')= i18n.gettext("[select]")
                        button#del-schedule= i18n.gettext("del")
